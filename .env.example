# HuggingFace Token (required for pyannote.audio)
HUGGINGFACE_TOKEN=your_hf_token_here

# MongoDB
MONGODB_URI=mongodb://localhost:27017/speaker_db

# NextAuth (for authentication)
NEXTAUTH_SECRET=your_random_secret_here
NEXTAUTH_URL=http://localhost:3001

# Storage (relative path from project root, or absolute path)
STORAGE_PATH=./storage

# Node Environment
NODE_ENV=production

# Python Worker Thread Configuration (optional)
OMP_NUM_THREADS=4
MKL_NUM_THREADS=4


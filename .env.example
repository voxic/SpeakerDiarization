# HuggingFace Token (required for pyannote.audio)
HUGGINGFACE_TOKEN=your_hf_token_here

# MongoDB
MONGODB_URI=mongodb://mongo:27017/speaker_db

# NextAuth (for authentication)
NEXTAUTH_SECRET=your_random_secret_here
NEXTAUTH_URL=http://localhost:3001

# Storage
STORAGE_PATH=/app/storage

# Node Environment
NODE_ENV=production

# Whisper language lock (optional)
WHISPER_LANGUAGE=

# Performance tuning (optional overrides)
AUDIO_PROCESSOR_CPU_THREADS=4
WHISPER_CPU_THREADS=4
WHISPER_MODEL_NAME=base
WHISPER_DEVICE=cpu
WHISPER_COMPUTE_TYPE=int8
WHISPER_BEAM_SIZE=1
WHISPER_BEST_OF=1
WHISPER_VAD_FILTER=true

# BLAS threading (optional)
OMP_NUM_THREADS=5
MKL_NUM_THREADS=5

